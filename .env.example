# Resume Summary API Configuration (Custom AWS API)
CUSTOM_API_KEY=your_custom_api_key_here

# Flask Configuration
SECRET_KEY=your_super_secret_key_here
FLASK_ENV=development

# Database Configuration (MongoDB Atlas)
# Note: URL encode special characters in password (@ becomes %40, etc.)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/resume_generator?retryWrites=true&w=majority

# Razorpay Configuration (Live Keys)
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret

# Application Settings
FREE_TRIAL_LIMIT=3
PORT=5000
